@page
@model UnitedYouthOrchestra7.Pages.MembersPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Member.Id" />
            <div class="form-group">
                <label asp-for="Member.Name" class="control-label"></label>
                <input asp-for="Member.Name" class="form-control" />
                <span asp-validation-for="Member.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Telephone" class="control-label"></label>
                <input asp-for="Member.Telephone" class="form-control" />
                <span asp-validation-for="Member.Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.email" class="control-label"></label>
                <input asp-for="Member.email" class="form-control" />
                <span asp-validation-for="Member.email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.DOB" class="control-label"></label>
                <input asp-for="Member.DOB" class="form-control" />
                <span asp-validation-for="Member.DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.SYearFK" class="control-label"></label>
                <select asp-for="Member.SYearFK" class="form-control" asp-items="ViewBag.SYearFK"></select>
                <span asp-validation-for="Member.SYearFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.InstFK" class="control-label"></label>
                <select asp-for="Member.InstFK" class="form-control" asp-items="ViewBag.InstFK"></select>
                <span asp-validation-for="Member.InstFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
