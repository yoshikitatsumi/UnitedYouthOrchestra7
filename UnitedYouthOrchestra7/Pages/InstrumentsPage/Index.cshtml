@page
@model InstrumentsPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:darkgreen">Instrument</h1>

<p>
    <a asp-page="Create" style="color:red">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Instrument[0].instrument)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Instrument)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.instrument)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" style="color:darkgreen">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" style="color:yellowgreen">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" style="color:red">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<img src="~/images/Oct2019e.jpg" />
